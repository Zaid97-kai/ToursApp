<Window x:Class="ToursApp.Windows.ConfirmWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ToursApp.Windows"
        mc:Ignorable="d"
        Title="ConfirmWindow" Height="150" Width="300" MinHeight="150" MinWidth="300" MaxHeight="150" MaxWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock x:Name="TxtConfirmMsg" Grid.Row="0" TextWrapping="Wrap" VerticalAlignment="Center" HorizontalAlignment="Center"></TextBlock>
        <UniformGrid Grid.Row="1" Rows="1" Columns="2">
            <Button x:Name="BtnReject" Click="BtnReject_Click" Content="Отклонить"></Button>
            <Button x:Name="BtnConfirm" Click="BtnConfirm_Click" Content="Подтвердить"></Button>
        </UniformGrid>
    </Grid>
</Window>
